<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="google-site-verification" content="bTY5KILAUJ31UqC3Rpm-49XL9fpQrt-Z0-saHLP3cAk" />
  <%- partial('google-analytics') %>
  <%
  var title = page.title;

  if (is_archive()){
    title = __('archive_a');

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = __('category') + ': ' + page.category;
  } else if (is_tag()){
    title = __('tag') + ': ' + page.tag;
  } else if (is_home()) {
    title = 'Blog';
    page.title = 'Blog' + ' | ' + config.title;
  }
  %>

  <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%- open_graph({twitter_id: theme.twitter, google_plus: theme.google_plus, fb_admins: theme.fb_admins, fb_app_id: theme.fb_app_id}) %>
  <% if (theme.rss){ %>
    <link rel="alternate" href="<%= url_for(theme.rss) %>" title="<%= config.title %>" type="application/atom+xml">
  <% } %>
  <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
  <% } %>
  <% if (config.highlight.enable){ %>
    <link href="//fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800&display=swap&subset=vietnamese" rel="stylesheet">
  <% } %>
  <%- css('https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css') %>
  <%- css('https://cdnjs.cloudflare.com/ajax/libs/flickity/2.1.1/flickity.min.css') %>
  <%- css('css/stack-interface.css') %>
  <%- css('css/socicon.css') %>
  <%- css('css/iconsmind.css') %>
  <%- css('css/theme.css') %>
  <%- css('https://fonts.googleapis.com/css?family=Open+Sans:200,300,400,400i,500,600,700%7CMerriweather:300,300i') %>
  <%- css('https://fonts.googleapis.com/icon?family=Material+Icons') %>
  <%- css('css/custom.css') %>
</head>
